# News Portal Application - Environment Variables Template

# Server Configuration
PORT=8000
MODE=development

# Database Configuration
# For development (local MongoDB)
db_local_url=mongodb://localhost:27017/newsportal

# For production (MongoDB Atlas or remote)
db_production_url=mongodb+srv://username:password@cluster.mongodb.net/newsportal

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this_in_production

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Additional Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173